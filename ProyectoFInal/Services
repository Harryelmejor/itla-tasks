using System;

public class Service
{
    public int Id;
    public string Name;
    public double Price;

    public Service(int id, string name, double price)
    {
        Id = id;
        Name = name;
        Price = price;
    }

    public void Display()
    {
        Console.WriteLine($"ID: {Id} | Service: {Name} | Price: ${Price:F2}");
    }
}
